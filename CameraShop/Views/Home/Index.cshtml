@model IEnumerable<CameraShop.Models.SanPham>
@using System.Data
@using System.Data.SqlClient
@using CameraShop.Models
@using System.Configuration
@{ SqlConnection con = new SqlConnection(ConfigurationManager.ConnectionStrings["strconnect"].ConnectionString);
    SqlDataAdapter da = new SqlDataAdapter("Select * from DanhMuc", con);
    DataTable dt = new DataTable();
    da.Fill(dt);
}
@{
    ViewBag.Title = "Home Page";
}


<!-- banner part start-->
<!-- feature_part start-->
<section class="feature_part padding_top">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="section_tittle text-center">
                    <h2>Featured Category</h2>
                </div>
            </div>
        </div>
        <div class="row align-items-center justify-content-between">
           
            <div class="col-lg-7 col-sm-6">
                <div class="single_feature_post_text">
                    <p>Premium Quality</p>
                    <h3>@dt.Rows[0][1].ToString()</h3>
                    <a href="/Home/SPtheoDanhMuc/@dt.Rows[0][0]" class="feature_btn">EXPLORE NOW <i class="fas fa-play"></i></a>
                    <img src="@dt.Rows[0][3].ToString()" width="500" alt="">
                </div>
            </div>
            
            <div class="col-lg-5 col-sm-6">
                <div class="single_feature_post_text">
                    <p>Premium Quality</p>
                    <h3>@dt.Rows[1][1].ToString()</h3>
                    <a href="/Home/SPtheoDanhMuc/@dt.Rows[1][0]" class="feature_btn">EXPLORE NOW <i class="fas fa-play"></i></a>
                    <img src="@dt.Rows[1][3].ToString()" width="300" alt="">
                </div>
            </div>
            <div class="col-lg-5 col-sm-6">
                <div class="single_feature_post_text">
                    <p>Premium Quality</p>
                    <h3>@dt.Rows[2][1].ToString()</h3>
                    <a href="/Home/SPtheoDanhMuc/@dt.Rows[2][0]" class="feature_btn">EXPLORE NOW <i class="fas fa-play"></i></a>
                    <img src="@dt.Rows[2][3].ToString()" width="500"  alt="">
                </div>
            </div>
            @*<div class="col-lg-7 col-sm-6">
                <div class="single_feature_post_text">
                    <p>Premium Quality</p>
                    <h3>Latest foam Sofa</h3>
                    <a href="#" class="feature_btn">EXPLORE NOW <i class="fas fa-play"></i></a>
                    <img src="~/Content/img/feature/feature_4.png" alt="">
                </div>
            </div>*@
        </div>
    </div>
</section>
<!-- upcoming_event part start-->
<!-- product_list start-->
<section class="product_list section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="section_tittle text-center">
                    <h2>New <span>Product</span></h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="product_list_slider owl-carousel">
                    <div class="single_product_list_slider">
                        <div class="row align-items-center justify-content-between">
                            @foreach (var item in Model)
                            {
                                <div class="col-lg-3 col-sm-6">
                                    <div class="single_product_item">
                                        <a href="/Home/ChiTietSP/@item.MaSP"><img src="@item.Anh" width="210" height="230" alt=""></a>
                                        <div class="single_product_text">

                                            <h4>@item.TenSP</h4>

                                            <h3 style="color:red">@string.Format("{0:#,##0}", item.DonGia) đ</h3>
                                            <a href="/Cart/AddtoCart/@item.MaSP" class="add_cart">+ add to cart<i class="ti-heart"></i></a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</section>
<!-- product_list part start-->
<!-- awesome_shop start-->
<section class="our_offer section_padding">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-6 col-md-6">
                <div class="offer_img">
                    <img src="~/Content/img/banner2.png" alt="">
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="offer_text">
                    <h2>
                        Weekly Sale on
                        60% Off All Products
                    </h2>
                    <br />
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="enter email address"
                               aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <a href="#" class="input-group-text btn_2" id="basic-addon2">book now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- awesome_shop part start-->
<!-- product_list part start-->
<section class="product_list best_seller section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="section_tittle text-center">
                    <h2>Best Sellers <span>shop</span></h2>
                </div>
            </div>
        </div>
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-12">
                <div class="best_product_slider owl-carousel">
                    @foreach (var item in Model)
                    {
                        <div class="single_product_item">
                            <a href="/Home/ChiTietSP/@item.MaSP"><img src="@item.Anh" width="210" height="230" alt=""></a>
                            <div class="single_product_text">
                                <h4>@item.TenSP</h4>
                                <h3 class="text-danger">@string.Format("{0:#,##0}", item.DonGia) đ</h3>
                            </div>
                        </div>
                    }

                    
                </div>
            </div>
        </div>
    </div>
</section>
<!-- product_list part end-->