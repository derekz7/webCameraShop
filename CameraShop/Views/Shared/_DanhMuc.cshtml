@using System.Data
@using System.Data.SqlClient
@using CameraShop.Models
@using System.Configuration
@{ SqlConnection con = new SqlConnection(ConfigurationManager.ConnectionStrings["strconnect"].ConnectionString);
    SqlDataAdapter da = new SqlDataAdapter("Select * from DanhMuc", con);
    DataTable dt = new DataTable();
    da.Fill(dt);
}
<div class="col-lg-3">
    <div class="left_sidebar_area">
        <aside class="left_widgets p_filter_widgets">
            <div class="l_w_title">
                <h3>Browse Categories</h3>
            </div>
            <div class="widgets_inner">
                <ul class="list">
                    <li>
                        <a href="/Home/SPtheoDanhMuc"><span>Tất cả sản phẩm</span></a>
                        
                    </li>
                    @for (int i = 0; i < dt.Rows.Count; i++)
                    {
                        <li>
                            <a href="/Home/SPtheoDanhMuc/@dt.Rows[i][0]"> <span>@dt.Rows[i][1].ToString()</span></a>
                          
                        </li>
                    }

                </ul>
            </div>
        </aside>
    </div>
</div>
