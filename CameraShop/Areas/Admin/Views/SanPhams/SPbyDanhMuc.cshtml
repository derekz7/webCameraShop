@model IEnumerable<CameraShop.Areas.Admin.Models.SanPham>
@using CameraShop.Areas.Admin.Models
@{
    ViewBag.Title = "SPbyDanhMuc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    DanhMuc danhMuc = ViewBag.DanhMuc as DanhMuc;
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h3 class="page-title">@danhMuc.TenLoai</h3>

        </div>
    </div>
</div>
<!-- ============================================================== -->

<div class="container-fluid">

    <p>
        @Html.ActionLink("Thêm sản phẩm", "Create")
    </p>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <h5 class="card-title">Danh sách sản phẩm theo danh mục @danhMuc.TenLoai</h5>
                    <div class="table-responsive">
                        <table id="zero_config"
                               class="table table-striped table-bordered">
                            <thead>
                                <tr style="background-color: #141619">
                                    <th style="color:white">
                                        STT
                                    </th>
                                    <th style="color:white">
                                        @Html.DisplayNameFor(model => model.TenSP)
                                    </th>
                                    <th style="color:white">
                                        @Html.DisplayNameFor(model => model.MoTa)
                                    </th>
                                    <th style="color:white">
                                        @Html.DisplayNameFor(model => model.DonGia)
                                    </th>
                                    <th style="color:white">
                                        SL
                                    </th>
                                    <th style="color:white">
                                        @Html.DisplayNameFor(model => model.Anh)
                                    </th>
                                    <th style="color:white" class="col-md-2">
                                        Tuỳ chọn
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.MaSP
                                        </td>
                                        <td>
                                            <a href="/Admin/SanPhams/Details/@item.MaSP"> <b>@Html.DisplayFor(modelItem => item.TenSP)</b></a>

                                        </td>
                                        <td>
                                            @{
                                                if (item.MoTa.Length > 100)
                                                {
                                                    <span>@item.MoTa.Substring(0, 100)...</span>
                                                }
                                                else
                                                {
                                                    @item.MoTa
                                                }
                                            }
                                        </td>
                                        <td>
                                            @string.Format("{0:#,0##}", item.DonGia)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SoLuong)
                                        </td>
                                        <td>
                                            <img src="@item.Anh" height="100" />
                                        </td>
                                        <td style="text-align : center">
                                            <p>
                                                @Html.ActionLink("Sửa", "Edit", new { id = item.MaSP }, new { @class = "btn btn-success", @style = "color:white" })
                                            </p>
                                            <p>
                                                @Html.ActionLink("Xoá", "Delete", new { id = item.MaSP }, new { @class = "btn btn-danger" })
                                            </p>

                                        </td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>
                                        STT
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TenSP)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MoTa)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DonGia)
                                    </th>
                                    <th>
                                        SL
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Anh)
                                    </th>
                                    <th>
                                        Tuỳ chọn
                                    </th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

